<% breadcrumb :games %>
<h1 class="mb-5"> ゲーム一覧画面 </h1>
<table class="table table-hover table-bordered">
    <thead class="thead-default">
        <tr>
            <th> <%= Game.human_attribute_name(:name) %> </th>
            <th>レビュー数</th>
        </tr>
    </thead>
    <tbody>
        <% @games.each do |game| %>
            <tr>
                <td><%= link_to game.name, game_path(game) %></td> 
                <td><%= "#{Review.where(game_id: game.id).count}個のレビュー" %></td>
            </tr>
        <% end %>
    </tbody>
</table>