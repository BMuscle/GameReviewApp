<% breadcrumb :reviews %>
<h1 class="mb-5"> レビュー一覧画面 </h1>


<%= search_form_for @q do |f| %>
    <div class="form-group">
        <%= f.label :genre, class: 'control-label' %>
        <%= f.search_field :game_genre_name_cont, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :game, class: 'control-label' %>
        <%= f.search_field :game_name_cont, class: 'form-control' %>
    </div>

    <%= f.label :total_hours_played, class: 'control-label pr-3' %>
    <div class="form-inline mb-4">
        <%= f.number_field :total_hours_played_gteq, class: 'form-control col-2' %>時間以上  
        <%= f.number_field :total_hours_played_lteq, class: 'form-control col-2' %>時間以下
    </div>

    <%= f.submit "検索", class: 'btn btn-primary mb-3'%>
<% end %>

<%= render partial: "shared/reviews_index", locals: { reviews: @reviews} %>
