<h1> レビュー登録画面 </h1>

<%= form_with(model: [@review], local: true) do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <%= f.label :game_id %>
    <%= f.collection_select :game_id, Game.all, :id, :name %>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
    <br>
    <%= f.file_field :image %>
    <%= f.submit '投稿' %>
<% end %>