<% breadcrumb :confirm_new_user %>
<h1 class="mb-5"> 登録内容の確認 </h1>

<%= form_with model: @user, local: true do |f| %>
    <table class="table table-hover">
        <thead>
        </thead>
        </tbody>
            <th scope="row"><%= User.human_attribute_name(:name) %></th>
            <td><%= @user.name %></td>
            <th scope="row"><%= User.human_attribute_name(:nickname) %></th>
            <td><%= @user.nickname %></td>
            <th scope="row"><%= User.human_attribute_name(:email) %></th>
            <td><%= @user.email %></td>
            <th scope="row"><%= User.human_attribute_name(:password) %></th>
            <td>非表示</td>
            <th scope="row"><%= User.human_attribute_name(:password_confirmation) %></th>
            <td>非表示</td>
        </tbody>
    </table>

    <%= f.hidden_field :name, maxlength: 30 %>
    <%= f.hidden_field :nickname, maxlength: 30 %>
    <%= f.hidden_field :email, maxlength: 254 %>
    <%= f.hidden_field :password, maxlength: 128 %>
    <%= f.hidden_field :password_confirmation, maxlength: 128 %>
    <%= f.submit '戻る', class: 'brn btn-secondary mr3', name: 'back' %>
    <%= f.submit '登録', class: 'btn btn-primary', id: "confirm" %>
<% end %>